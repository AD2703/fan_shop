<div class="shop">
  <% if  @campaign_products[0].campaign.user.photo.attached? %>
    <%= cl_image_tag  @campaign_products[0].campaign.user.photo.key, class: "shop-user-img" %>
  <% end %>
  <div class="shop-user-info">
    <h1><%=  @campaign_products[0].campaign.user.nickname %></h1>
    <p><%=  @campaign_products[0].campaign.user.description %></p>
    <i class="fab fa-twitter"></i>
    <i class="fab fa-instagram"></i>
    <i class="fab fa-facebook-square"></i>
    <i class="fab fa-github-alt"></i>
  </div>
</div>
<br>
<br>
<div class="showusers">
    <div class="title-box">
      <div>
        <h1><%= @campaign_products[0].campaign.name.capitalize %></h1>
        <p><strong><%= @campaign_products[0].campaign.duration_days %> </strong>days left</p>
      </div>
    </div>
      <div class="products wrap">
        <% @campaign_products[0].campaign.campaign_products.each do |campaign_product|%>
          <div class="product">
            <div class="product-image">
              <%= cl_image_tag campaign_product.product.photo.key, class: "card-dash-img" %>
            </div>
            <div class="product-info">
              <div class="product-price-name">
                <p><%= campaign_product.product.name.upcase %> </p>
                <p><strong><%= campaign_product.product.price %> â‚¬</strong> </p>
              </div>
              <div class="btn-user-box">
                <button type="button" class="btn-dashboard" ><%= link_to "MORE" , campaign_campaign_product_path(campaign_product.campaign, campaign_product) %></button>
              </div>
            </div>
          </div>
        <% end %>
      </div>
</div>
