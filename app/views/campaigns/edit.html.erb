<div class="form">
  <div class= "form-container">
    <h2>Update Campaign</h2>
    <div class="form-inputs">
      <%= simple_form_for(@campaign) do |f| %>
        <div class="form-inputs">
           <%= f.input :name, placeholder: "Name", label: false  %>
          <%= f.input :duration_days, placeholder: "Duration Days", label: false  %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "SAVE", class: "btn-singup-form" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="form-img1">
  </div>
</div>
