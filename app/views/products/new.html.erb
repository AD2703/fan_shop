<div class="form" class="sr-only">
<h1>New product</h1>
<br>
<%= simple_form_for(@product) do |f| %>
  <%= f.input :name %>
  <br>
<p>Select the type of garment</p>

  <%= f.select :garment, collection: ["T-shirt", "hoodie", "long-sleeve"] %>
  <br>
  <p>Select the color of your product</p>
  <br>
  <%= f.select :color,  collection: ["white", "grey", "black", "green", "beige", "pink"] %>
  <br>
  <br>
  <p>Upload the picture you want to see on the Garment</p>
  <%= f.input :photo, as: :file %>
  <%# <%= f.input :publish, as: :boolean, checked_value: true, unchecked_value: false %>
  <br>
  <p>Cost per unit depending on the quantity and garment (â‚¬ /unit)</p>
  <table class="table">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">1-10</th>
      <th scope="col">11-25</th>
      <th scope="col">26-100</th>
      <th scope="col">+100</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">T-shirt</th>
      <td>15.00</td>
      <td>12.00</td>
      <td>10.00</td>
      <td>7.00</td>
    </tr>
    <tr>
      <th scope="row">Hoodie</th>
      <td>20.00</td>
      <td>18.00</td>
      <td>15.00</td>
      <td>12.00</td>
    </tr>
    <tr>
      <th scope="row">Long sleeve</th>
      <td>17.00</td>
      <td>14.00</td>
      <td>12.00</td>
      <td>9.00</td>
    </tr>
  </tbody>
</table>
  <%= f.input :price %>
  <%= f.submit "Save", class: "btn-dashboard"%>
<% end %>
</div>
